<% @articles.each do |article| %>
  <div class="card mt-2">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to article.title, article %>
      </h5>
      <% if article.categories.any? %>
        <div class="mb-3"><%= render article.categories %></div>
      <% end %>
      <h6 class="card-subtitle mb-2 text-muted">by <%= article.user.fullname %></h6>
      <p class="card-text"><%= article.body %></p>
      <%= link_to 'Edit', edit_article_path(article), class: 'card-link' %>
      <%= link_to 'Delete', article_path(article), method: :delete, class: 'card-link' %>
    </div>
  </div>
<% end %>