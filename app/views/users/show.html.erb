<div class="container">
  <div>
    <div class="mt-4">
      <h2 class="text-center d-block w-auto">Profile of <%= @user.fullname %></h2>
      <div class="text-center mb-3">
        <img width="80px" src="<%= get_user_image(@user.username) %>" alt="Card image cap">
      </div>
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%= @user.fullname %></h5>
          <%= link_to 'Edit Profile', edit_user_path(@user) %>
          <%= link_to 'Delete', user_path(@user), method: :delete, class: 'card-link', data: { confirm: 'Are you sure' } %>
        </div>
      </div>

      <h2 class="text-center">Articles</h2>
      <% @articles.each do |article| %>
        <div class="card mt-2">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, article %>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">by <%= article.user.fullname %></h6>
            <p class="card-text"><%= article.body %></p>
            <%= link_to 'Edit', edit_article_path(article), class: 'card-link' %>
            <%= link_to 'Delete', article_path(article), method: :delete, class: 'card-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>