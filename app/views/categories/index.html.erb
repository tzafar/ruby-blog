<div class="container">
  <h2>Categories</h2>
  <%= will_paginate @categories, list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>
  <% @categories.each do |category| %>
    <div class="card mt-2">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to category.title, category %>
        </h5>
        <%= link_to 'Edit', edit_category_path(category), class: 'card-link' %>
      </div>
    </div>
  <% end %>
  <%= will_paginate @categories, list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>
</div>

